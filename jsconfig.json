            "@/*": ["./packages/*"],
            "docs": ["./docs/*"]
        }
    },
    "include": [
        "./**/*",
        "packages/**/*.vue",
        "docs/**/*.vue"
    ],
    "exclude": ["node_modules", "dist"]
}
